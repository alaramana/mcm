<!-- Search about Ssc Pension-->
<h1><%= I18n.t "search" %>:<br>Search Results </h1>
<% if @spensions.blank? %>
	<p><%= I18n.t "ssc_details_no" %><br>There are no SSC Pension currently in the system.</p>
<% else %>
	<p><%= I18n.t "ssc_details" %><br>These are the current SSC Pensions:</p>
	<table>
	<tr>    <td><%= I18n.t "spension_number" %><br>Pension Number</td>
		<td><%= I18n.t "social_security_category" %><br>SS CategoryName</td>
		<td><%= I18n.t "first_name" %><br>Fist name</td>
		<td><%= I18n.t "last_name" %><br>Last name</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @spensions.each do |c| %>	
	<tr>    
        <td><%= link_to c.spension_number, {:action => 'show', :id => c.id} %></td>
		<td><%= c.ssccategory.name %></td>
		<td><%= c.first_name %></td>
		<td><%= c.last_name %></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @spensions %>
<%= I18n.t "back" %><br><%= link_to 'Back', {:action => 'list'} %>
