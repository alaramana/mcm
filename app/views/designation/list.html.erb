<!--Listing all the Designation Details-->

<% if @designations.blank? %>
	<p><%= I18n.t "designation_details_no" %>:<br>There are no Designations currently in the system.</p>
<% else %>
<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Designation  Name" ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Designation  Name'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Search Designation" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t "designation_details" %>:<br>These are the current Designations:</p>
	<table>
	<tr>
		<td><%= I18n.t "designation" %><br>Designation</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @designations.each do |c| %>
	<tr>
		<td><%= link_to c.name, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @designations %>
<br>
<table>
<tr>
<td><%= link_to I18n.t "add_new", {:action => 'new' } %><br><%= link_to "Add new", {:action => 'new' }%> </td>
<td><%= link_to I18n.t "print_report", {:action => 'report' } %> <br><%= link_to "Print Report", {:action => 'report' }%> </td>
</tr>
</table>
