<!-- Search about Designation -->
<h1><%= I18n.t "search" %>:<br>Search Results </h1>
	<% if @designations.blank? %>
	<p><%= I18n.t "designation_details_no" %>:<br>There are no Designations currently in the system.</p>
<% else %>
	<p><%= I18n.t "designation_details" %>:<br>These are the current Designations:</p>
	<table>
	<tr>
		<td><%= I18n.t "name" %><br>Designation Name</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @designations.each do |c| %>
	<tr>
		<td><%= link_to c.name, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @designations %>	
<%= link_to I18n.t "back" ,{:action => 'list'}%><br> <%= link_to 'Back', {:action => 'list'} %>
