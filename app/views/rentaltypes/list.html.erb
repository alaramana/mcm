<!--Listing all the Rental Types Details-->
<% if @rentaltypes.blank? %>
	<p><%= I18n.t "rental_type_details_no" %><br>There are no Rental Types currently in the system.</p>
<% else %>

<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Rental Types " ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Rental Types'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Rental Types" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t "rental_type_details" %><br>These are the current Rental Types:</p>
	<table>
	<tr>
		<td><%= I18n.t "rental_type" %><br>Rental Type</td>		
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @rentaltypes.each do |c| %>
	<tr>
		<td><%= link_to c.rental_type, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<br>
<table>
<tr>
<td><%= I18n.t  "new" %> <br><%= link_to "Add new", {:action => 'new' }%>
</td>
<td><%= I18n.t  "print_report" %> <br><%= link_to "Print Report", {:action => 'rentaltypereport'}%>
</td>
</tr>
</table>
