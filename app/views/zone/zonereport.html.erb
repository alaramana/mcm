<% if @zones.blank? %>
	<p align="center>><%= I18n.t "zone_details_no" %>:<br>There are no Zones currently in the system:</p>

<% else %>
		<h1 align="center"><%= I18n.t "mcm" %></h1>
		<h2 align="center"><%= I18n.t "mcm_address" %> <h2>
		<hr>
		<h2 align="center"><%= I18n.t "zone_details" %><br>Report of Zones</h2>
		<br>

			<table border="1" align="center">
			<tr>
				<td><%= I18n.t "name" %><br>Name</td>
		<td><%= I18n.t "description" %><br>Description</td>
			</tr>
			<% @zones.each do |c| %>
	
			<tr>
				<td><%= c.name%></td>
				<td><%=c.description %></td>
			</tr>
			<% end %>
			</table>
<% end %>


