<!--Showing the details of Death Registrat-->
<h1><%= I18n.t "death_details" %>:<br>Death Registration Details:</h1>
	<table>
	<tr>
		<td><%= I18n.t "first_name" %>:<br>First Name:</td>
		<td><%= @death.first_name %></td>
	</tr>
	<tr>
		<td><%= I18n.t "date_of_death" %>:<br>Date of Death:</td>
		<td><%= @death.death_date.strftime("%d-%m-%Y") %></td>
	</tr>
	<tr>
		<td><%= I18n.t "gender" %>:<br>Sex:</td>
		<td><%= @death.gender.name %></td>
	</tr>
	<tr>
		<td><%= I18n.t "address" %>:<br>Address: </td>
		<td><%= @death.address %></td>
	</tr>
	<tr>
		<td><%= I18n.t "father_name" %>:<br>Father Name:</td>
		<td><%= @death.father_name %></td>
	</tr>
	<tr>
		<td><%= I18n.t "age" %>:<br>Age:</td>
		<td><%= @death.age %></td>
	</tr>
	<tr>
		<td><%= I18n.t 'register_remark' %>:<br>Number of Copies</td>
		<td><%= @death.copies %></td>
	</tr>
	<tr>
		<td><%= I18n.t 'amount' %>:<br>Amount:</td>
		<td><%= @death.amount %></td>
	</tr>
	</table>
<%= I18n.t 'back' %>:<br><%= link_to 'Back', {:action => 'list'} %>
