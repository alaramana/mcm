<!--Listing all Ssc Category Details -->
<% if @ssccategories.blank? %>
 	<p><%= I18n.t 'ssc_details_no' %><br>There are no Ssc Category currently in the system:</p>
<% else %>
<!--Start of search text box -->
	<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Ssc Category Name" ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Ssc Category Name'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Search Ssc Category" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t 'ssc_details' %><br>List of  current Ssc Category:</p>
	<table>
	<tr>
		<td><%= I18n.t "social_security_category" %><br>Ssc Category Name</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @ssccategories.each do |c| %>
	
	<tr>
		<td><%= link_to c.name, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @ssccategories %>
<br>

<table>
<tr>
<td><%= I18n.t  "add_new" %> <br><%= link_to "Add new", {:action => 'new' }%>
</td>
<td><%= I18n.t  "print_report" %> <br><%= link_to "Print Report ", {:action => 'ssccategoryreport' }%> </td>
</tr>
</table>


