<% if @ssccategories.blank? %>
 	<p align="center>><%= I18n.t "ssc_details_no" %>:<br>There are no ssccategories currently in the system:</p>
<% else %>
<h1 align="center"><%= I18n.t "mcm" %></h1>
<h2 align="center"><%= I18n.t "mcm_address" %> <h2>
<hr>

<h2 align="center"><%= I18n.t "ssc_details" %><br>Report of Pension Categories</h2>
<br>

	<table border="1" align="center">
	<tr>
	<td><%= I18n.t "name" %><br>Name</td>
   <td><%= I18n.t "amount" %><br>Amount</td>
  <td><%= I18n.t "description" %><br>Description</td>
	</tr>
	<% @ssccategories.each do |c| %>
	
	<tr>
		<td><%= c.name%></td>
		<td><%= c.amount %></td>
		<td><%= c.description%></td>
		 	</tr>
	<% end %>
	</table>
<% end %>

