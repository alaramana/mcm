<!--Listing all the Employee Type Details-->
<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Employee Category" ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Employee Type'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Search Employee Category" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<% if @employeecategories.blank? %>
	<p><%= I18n.t "employee_type_details_no" %>:<br>There are no Employee Categories currently in the system.</p>
<% else %>
	<p><%= I18n.t "employee_type_details" %>:<br>These are the current Employee Categories:</p>
	<table>
	<tr>
		<td><%= I18n.t "employee_type" %><br>Employee Category</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @employeecategories.each do |c| %>
	<tr>
		<td><%= link_to c.name, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @employeecategories %>
<%= link_to I18n.t "add_new" , {:action => 'new' } %><br><%= link_to "Add new", {:action => 'new' }%>



