<!--Listing all Bill Passing Details -->
<% if @billpassings.blank? %>
 	<p><%= I18n.t "bill_passing_details_no" %> <br>There are no Bill Passing currently in the system:</p>
<% else %>
<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Bill Passing" ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Bill Passing'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Search Bill Passing" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t "bill_passing_details" %> <br>These are the current Bill Passings:</p>
	<table>
	<tr>
		<td><%= I18n.t "invoice_number" %><br>Invoice Numbaer</td>
		<td><%= I18n.t "goods_amount" %><br>Amount</td>		
		<td><%= I18n.t "organization_name" %><br>Organization Name</td>
		<td><%= I18n.t "address" %><br>Address</td>			
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @billpassings.each do |c| %>
	
	<tr>
		<td><%= link_to c.invoice_number , {:action => 'show', :id => c.id} -%></td>
		<td><%=  c.amount -%></td>
		<td><%= c.org_name -%></td>
		<td><%= c.address -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @billpassings %>
<br>
<table>
<tr>
<td><%= link_to I18n.t "add_new", {:action => 'new' } %><br><%= link_to "Add new", {:action => 'new' }%> </td>
<td><%= link_to I18n.t "print_report", {:action => 'billpassingreport' } %> <br><%= link_to "Print Report", {:action => 'billpassingreport' }%> </td>
</tr>
</table>
