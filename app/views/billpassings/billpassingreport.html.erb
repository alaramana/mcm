<% if @billpassings.blank? %>
 	<p align="center>><%= I18n.t "bill_passing_details_no" %>:<br>There are no Bill Passing currently in the system:</p>
<% else %>
		<h1 align="center"><%= I18n.t "mcm" %></h1>
		<h2 align="center"><%= I18n.t "mcm_address" %> <h2>
		<hr>
	<h2 align="center"><%= I18n.t "bill_passing_details" %><br>Bill Pass Report</h2>
<br>
	<table border="1" align="center">
	<tr>
  <td><%= I18n.t "invoice_number" %><br>Invoice Numbaer</td>
		<td><%= I18n.t "invoice_date" %><br>Invoice Date</td>
 	<td><%= I18n.t "goods_amount" %><br>Amount</td>		
		<td><%= I18n.t "organization_name" %><br>Organization Name</td>
		<td><%= I18n.t "address" %><br>Address</td>	
	</tr>
	<% @billpassings.each do |c| %>
	
	<tr>
		<td><%= c.invoice_number%></td>
		<td><%= c.invoice_date %></td>
  <td><%= c.amount%></td>
  <td><%= c.org_name%></td>
  <td><%= c.address%></td>  
	</tr>
	<% end %>
	</table>
<% end %>

