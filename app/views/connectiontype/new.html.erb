<!--entering the data for creating Water Connection Types-->
<h1><%= I18n.t "enter_connection_details" %>:<br>Enter Water Connection Type Details:</h1>
<%= form_tag :action => 'create' %>
	<table>
	<tr>
		<td><%= I18n.t "connection_name" %>:<br><label for="name">Water Connection Type</label>:* </td>
		<td><%= text_field 'connectiontype', 'name',:class=>'title' %></td>
	</tr>
	<tr>
		<td><%= I18n.t "description" %>:<br><label for="description">Description</label>:* </td>
		<td><%= text_area 'connectiontype', 'description' %></td>
	</tr>
	<tr>
		<td><%= I18n.t "amount" %>:<br><label for="amount">Amount</label>:* </td>
		<td><%= text_field 'connectiontype', 'amount',:class=>'title' %></td>
	</tr>
	<tr>
		<td></td>
		<td><%= I18n.t "save" %><br><%= submit_tag "Create" %></td>
	</tr>
	</table>
<%= form_tag %>


