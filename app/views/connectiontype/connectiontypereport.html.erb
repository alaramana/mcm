<% if @connectiontypes.blank? %>
 	<p align="center>><%= I18n.t "connection_details_no" %>:<br>There are no Water Connection Types currently in the system:</p>
<% else %>
		<h1 align="center"><%= I18n.t "mcm" %></h1>
		<h2 align="center"><%= I18n.t "mcm_address" %> <h2>
		<hr>
	<h2 align="center"><%= I18n.t "connection_details" %><br>Report of Water Connection Types</h2>
<br>
	<table border="1" align="center">
	<tr>
		<td><%= I18n.t "connection_name" %><br>ConnectionName</td>
  <td><%= I18n.t "description" %><br>Descrioption</td>
  <td><%= I18n.t "amount" %><br>Amount</td>
</tr>
	<% @connectiontypes.each do |c| %>
	
	<tr>
		<td><%= c.name%></td>
  <td><%= c.description %></td>
  <td><%= c.amount %></td>
	</tr>
	<% end %>
	</table>
<% end %>

