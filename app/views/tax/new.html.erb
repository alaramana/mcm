	<table>
	<tr>
		<td><%= I18n.t "tax" %>:<br><label for="tax">Tax</label>:* </td>
		<td><%= text_field 'tax', 'name',:class=>'title' %></td>
	</tr>
	<tr>
		<td><%= I18n.t "amount" %>:<br><label for="amount">Amount</label>:*</td>
		<td><%= text_field 'tax', 'amount',:class=>'title' %></td>
	</tr>
	<tr>
		<td><%= I18n.t "description" %>:<br><label for="description">Description</label>:</td>
		<td><%= text_area 'tax', 'description'%></td>
	</tr>
	<tr>
		<td></td>
		<td><%= I18n.t "save" %><br><%= submit_tag "Create" %></td>
	</tr>
