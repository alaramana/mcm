	</tr>
	<tr>
		<td><%= I18n.t "unit_value"%>:<br><label for="unitvalue">Unit Value</label>*: </td>
		<td><%= collection_select(:ptax, :unitvalue_id,@unitvalue, :id, :amount) %></td>
	</tr>
	<tr>
		<td></td>
		<td><%= I18n.t "save_changes" %><br><%= submit_tag "Save Changes" %></td>
	</tr>
	</table>
<%= I18n.t "back" %><br><%= link_to 'Back', {:action => 'list' } %>

