<!--Listing all Storecunsumption Details -->

<% if @storecunsumptions.blank? %>
 	<p><%= I18n.t "stores_consumption_details_no" %><br>There are no Storecunsumptions currently in the system:</p>
<% else %>
<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Storecunsumption " ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Storecunsumption'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "StoreCunsumption" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t "stores_consumption_details" %><br>These are the current Storecunsumptions:</p>
	<table>
	<tr>
		<td><%= I18n.t "item_name" %><br>Item Name</td>
		<td><%= I18n.t "department" %><br>Department</td>
		<td><%= I18n.t "quantity" %><br>Quantity</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @storecunsumptions.each do |c| %>
	
	<tr>
		
		<td><%= c.itemmaster.item_name -%></td>
		<td><%= c.department.name -%></td>
		<td><%= link_to c.quantity , {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @storecunsumptions %>
<br>
<table>
<tr>
<td><%= link_to I18n.t "add_new", {:action => 'new' } %><br><%= link_to "Add new", {:action => 'new' }%> </td>
<td><%= link_to I18n.t "print_report", {:action => 'new' } %> <br><%= link_to "Print Report", {:action => 'storeconsumptionreport' }%> </td>
</tr>
</table>

