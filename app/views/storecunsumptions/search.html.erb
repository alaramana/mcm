<!-- Search about Storecunsumptions-->
<h1><%= I18n.t "search" %>:<br>Search Results </h1>
<% if @storecunsumptions.blank? %>
 	<p><%= I18n.t "stores_consumption_details_no" %><br>There are no Storecunsumptions currently in the system:</p>
<% else %>
	<p><%= I18n.t "stores_consumption_details" %><br>These are the current Storecunsumptions:</p>
	<table>
	<tr>
		<td><%= I18n.t "item_name" %><br>Item Name</td>
		<td><%= I18n.t "department" %><br>Department</td>
		<td><%= I18n.t "quantity" %><br>Quantity</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @storecunsumptions.each do |c| %>
	
	<tr>
		
		<td><%= c.itemmaster.item_name -%></td>
		<td><%= c.department.name -%></td>
		<td><%= link_to c.quantity , {:action => 'show', :id => c.id} -%> </td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @storecunsumptions %>
<%= I18n.t "back" %><br> <%= link_to 'Back', {:action => 'list'} %>
