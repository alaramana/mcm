<!--entering the data for Storecunsumption Details -->
<h1><%= I18n.t "enter_stores_consumption_details" %><br>Enter Storecunsumption Detail</h1>
<%= form_tag :action => 'create' %>
	<table>
	<tr>
		<td><%= I18n.t "item_name" %>:<br><label for="item_name"> Item name</label>*: </td>
		<td><%= collection_select(:storecunsumption, :itemmaster_id,@itemmaster, :id, :item_name) %></td>
	</tr>
	<tr>
		<td><%= I18n.t "department" %>:<br><label for="name"> Department name</label>*: </td>
		<td><%= collection_select(:storecunsumption, :department_id,@department, :id, :name) %></td>
	</tr>
	<tr>
		<td><%= I18n.t "quantity" %>:<br><label for="quantity">Quantity</label>:* </td>
		<td><%= text_field 'storecunsumption', 'quantity',:class=>'title' %></td>
	</tr>	
	<tr>
		<td><%= I18n.t "description" %>:<br><label for="description">Description</label>:</td>
		<td><%= text_area 'storecunsumption', 'description', :cols=>30, :rows=>5 %></td>
	</tr>
	<tr>
		<td></td>
		<td><%= I18n.t "save" %> <br> <%= submit_tag "Create" %></td>
	</tr>
	</table>

<%= form_tag %>

