<%= form_tag :action => 'update', :id => @deliverymethod %>
	<table>
	<tr>
		<td><label for="name">Delivery Method</label>:* </td>
		<td><%= text_field 'deliverymethod', 'name',:class=>'title' %></td>
	</tr>
	<tr>
		<td><label for="description">Description</label>:</td>
		<td><%= text_field 'deliverymethod', 'description' %></td>
	</tr>
	<tr>
		<td></td>
		<td><%= submit_tag "Save Changes" %></td>
	</tr>
	</table>
<%= form_tag %>
