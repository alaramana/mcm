<!--Listing all the  Departments-->
<% if @departments.blank? %>
	<p><%= I18n.t "department_details_no" %>:<br>There are no Departments currently in the system.</p>
<% else %>
		<h1 align="center"><%= I18n.t "mcm" %></h1>
		<h2 align="center"><%= I18n.t "mcm_address" %> <h2>
		<hr>
	<h2 align="center"> <%= I18n.t "department_details" %><br>Department Report</h2>
<br>

	<table align="center">
		<tr>
		<td><%= I18n.t "department" %><br>Name</td>
		<td><%= I18n.t "description" %><br>Description</td>
	</tr>

	<% @departments.each do |c| %>
	<tr>
		<td><%= c.name %></td>
		<td><%= c.description %></td>
	</tr>
	<% end %>
	</table>
<% end %>



