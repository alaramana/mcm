<!--Listing all the Propertys -->
<% if @properties.blank? %>
	<p><%= I18n.t "property_details_no" %>:<br>There are no Property currently in the system.</p>
<% else %>

<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Property " ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Property'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Property" %></td>
