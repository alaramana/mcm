<!--Listing all the Employee Type Details-->

<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Employee" ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Employee'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Search Employee" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->

<% if @employees.blank? %>
	<p><%= I18n.t "employee_details_no" %>:<br>There are no Employees   currently in the system.</p>
<% else %>
	<p><%= I18n.t "employee_details" %>:<br> List of Employees in current System:</p>
	<table>
	<tr>
		<td><%= I18n.t "employment_number" %>:<br> Employement Number</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @employees.each do |c| %>
	<tr>
		<td><%= link_to c.name, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @employees %>
