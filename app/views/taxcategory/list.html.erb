<!-- Listing all the Tax Category Details -->
<% if @taxcategories.blank? %>
	<p><%= I18n.t "tax_category_details_no" %>:<br>There are no Tax Categories currently in the system.</p>
<% else %>
<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Tax Category " ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Tax Category'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Search Tax Category" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t "tax_category_details" %>:<br>These are the current tax categories:</p>
	<table>
	<tr>
		<td><%= I18n.t "tax_category" %><br>Category</td<td><%= I18n.t "edit" %><br>Edit</td></tr>
		<% @taxcategories.each do |c| %>
	<tr>
		<td><%= link_to c.category, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @taxcategories %>
