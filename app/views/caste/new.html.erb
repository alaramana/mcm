<!--entering the data for creating Caste Details-->
<h1><%= I18n.t "enter_caste_details" %><br>Enter Caste Details:</h1>
<%= form_tag :action => 'create' %>
	<table>
	<tr>
		<td><%= I18n.t "caste" %>:<br> <label for="name"> Caste</label>:* </td>
		<td><%= text_field 'caste', 'name',:class=>'title' %></td>
	</tr>
	<tr>
		<td><%= I18n.t "religion" %>:<br><label for="religion">  Religion</label>:* </td>
		<td><%= collection_select(:caste, :religion_id,@religion, :id, :name) %></td>
	</tr>
	<tr>
		<td><%= I18n.t "description" %>:<br><label for="description">  Description</label>:</td>
		<td><%= text_area 'caste', 'description' %></td>
	</tr>
	<tr>
		<td></td>
		<td><%= I18n.t "save" %><br><%= submit_tag "Create" %></td>
	</tr>
	</table>
<%= form_tag %>
