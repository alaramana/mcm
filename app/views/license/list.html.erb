<!--Listing all the License Details-->
<% if @licenses.blank? %>
	<p><%= I18n.t "license_registration_details_no" %><br>There are no License currently in the system.</p>
<% else %>
<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter License  " ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter License'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Licenses" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t "license_registration_details" %><br>These are the current License :</p>
	<table>
	<tr>
		<td><%= I18n.t 'license_number' %><br>License Number</td>		
		<td><%= I18n.t "edit" %><br>Edit</td>
		<td><%= I18n.t "calculate" %><br>Calculate</td>	
	</tr>
	<% @licenses.each do |c| %>
	<tr>
		<td><%= link_to c.license_number, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
		<td><%= link_to 'Calculate', {:action => 'calculate', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @licenses %>

<br>
<table>
<tr>
<td><%= link_to I18n.t "add_new", {:action => 'new' } %><br><%= link_to "Add new", {:action => 'new' }%> </td>
<td><%= link_to I18n.t "print_report", {:action => 'new' } %> <br><%= link_to "Print Report", {:action => 'licensereport' }%> </td>
</tr>
</table>
