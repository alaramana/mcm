<!--Listing all the Organization Details-->
<% if @organizations.blank? %>
	<p><%= I18n.t 'orgnanization_details_no' %><br>There are no Organization currently in the system.</p>
<% else %>

<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Organization Name " ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Organization Details'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Search Organization" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t 'orgnanization_details' %><br>List of current Organizations:</p>
	<table>
	<tr> 
		<td><%= I18n.t 'long_name' %><br>Organization Name</td>
		<td><%= I18n.t 'edit' %><br>Edit</td>
	</tr>
	<% @organizations.each do |c| %>
	<tr>
		<td><%= link_to c.long_name, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>	
	</tr>	
	<% end %>
	</table>
<% end %>
<%= will_paginate @organizations %>
<%= I18n.t 'add_new' %><br><%= link_to "Add new", {:action => 'new' }%>
| <%= link_to "Report", {:action => 'organizationeport' }%>


