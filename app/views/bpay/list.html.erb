<!--Listing all Basic Pays-->

<% if @bpays.blank? %>
	<p><%= I18n.t "basic_pay_details_no" %><br>There are no Basic Pay currently in the system.</p>
<% else %>
	<p><%= I18n.t "basic_pay_details" %><br>These are the current Basic Pay:</p>
	<table>
	<tr>
		<td><%= I18n.t "department" %><br>Department</td>
		<td><%= I18n.t "designation" %><br>Designation</td>
		<td><%= I18n.t "amount" %><br>Amount</td>
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @bpays.each do |c| %>
	<tr>
		<td><%= c.department.name -%></td>
		<td><%= link_to c.designation.name, {:action => 'show', :id => c.id} -%></td>

		<td><%= c.bpay_amount -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>

	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @bpays %>
<%= I18n.t "add_new" %><br><%= link_to "Add new", {:action => 'new' }%>



