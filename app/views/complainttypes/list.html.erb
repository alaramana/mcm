<!--Listing all the Complaint Types Details-->
<% if @complainttypes.blank? %>
	<p><%= I18n.t 'complaint_type_details_no' %><br>There are no Complaint Types currently in the system.</p>
<% else %>
<!--Start of search text box -->
<%= form_tag :action => 'search' %>
	<table>
	<tr>
		<td><%= I18n.t "search" %>:<br>Search: </td>
		<td>
<%= text_field_tag :query ,@query ||="Enter Complaint Types " ,:class=>'title',:onfocus=>"javascript: this.value=''",:onblur=>"javascript: if(this.value=='') this.value='Enter Complaint Types'" %></td>
		<td><%= I18n.t "search" %>:<br><%= submit_tag "Complaint Types" %></td>
	</tr>
	</table>
<%= form_tag %>
<!--end of search text box -->
<br>
	<p><%= I18n.t 'complaint_type_details' %><br>These are the current Complaint Types:</p>
	<table>
	<tr>
		<td><%= I18n.t "complaint_type" %><br>Complaint Type</td>		
		<td><%= I18n.t "edit" %><br>Edit</td>
	</tr>
	<% @complainttypes.each do |c| %>
	<tr>
		<td><%= link_to c.complaint_type, {:action => 'show', :id => c.id} -%></td>
		<td><%= link_to 'Edit', {:action => 'edit', :id => c.id} %></td>
	</tr>
	<% end %>
	</table>
<% end %>
<%= will_paginate @complainttypes %>
<br>

<table>
<tr>
<td><%= I18n.t  "new" %> <br><%= link_to "Add new", {:action => 'new' }%>
</td>
<td><%= I18n.t  "print_report" %> <br><%= link_to "Print Report", {:action => 'complainttypereport'}%>
</td>
</tr>
</table>

